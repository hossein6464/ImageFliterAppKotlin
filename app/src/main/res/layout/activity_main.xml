<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/landing_background_image"
        android:layout_height="match_parent"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/landing_background"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonViewSavedImages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cornerRadius="@dimen/_20sdp"
        android:text="@string/saved_images"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:includeFontPadding="false"
        android:fontFamily="@font/poppins_bold"
        android:layout_marginBottom="@dimen/_12sdp"
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/white"

        app:layout_constraintBottom_toBottomOf="parent"
        android:backgroundTint="@color/buttonSavedImages"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonViewEditNewImages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cornerRadius="@dimen/_20sdp"
        android:text="@string/edit_new_images"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:includeFontPadding="false"
        android:fontFamily="@font/poppins_bold"
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/white"

        app:layout_constraintBottom_toTopOf="@id/buttonViewSavedImages"
        android:backgroundTint="@color/buttonEditNewImage"
        />
    <TextView
        android:id="@+id/textSubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:includeFontPadding="false"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:layout_marginBottom="@dimen/_16sdp"
        android:textSize="@dimen/_13ssp"
        android:textColor="@color/white"
        android:text="@string/let_s_create_something_new"
        app:layout_constraintBottom_toTopOf="@id/buttonViewEditNewImages"
        />
    <TextView
        android:id="@+id/textTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:includeFontPadding="false"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:layout_marginBottom="@dimen/_4sdp"
        android:textSize="@dimen/_20ssp"
        android:textColor="@color/white"
        android:text="@string/image_filters"
        app:layout_constraintBottom_toTopOf="@id/textSubtitle"
        />

</androidx.constraintlayout.widget.ConstraintLayout>